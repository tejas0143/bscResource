<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Sem6Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sem6 textbooks"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <GridLayout
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_weight="1"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:rowCount="3">

            <Button
                android:id="@+id/s6sub1"
                style="@style/buttonstyle"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:drawableTop="@drawable/icon_wireless"
                android:text= "wsnamc"/>

            <Button

                android:id="@+id/s6sub2"
                style="@style/buttonstyle"
                android:layout_row="0"
                android:layout_column="1"
                android:drawableTop="@drawable/icon_cloud"
                android:text="cloud computing"

                />

            <Button
                android:id="@+id/s6sub3"
                style="@style/buttonstyle"
                android:layout_row="1"
                android:layout_column="0"
                android:drawableTop="@drawable/icon_cyber"
                android:text="cyber forensics "

                />

            <Button
                android:id="@+id/s6sub4"
                style="@style/buttonstyle"
                android:layout_row="1"
                android:layout_column="1"
                android:drawableTop="@drawable/icon_info1"
                android:text="information retrival"
                android:textSize="11sp"

                />

            <Button
                android:id="@+id/s6sub5"
                style="@style/buttonstyle"
                android:layout_row="2"
                android:layout_column="0"
                android:drawableTop="@drawable/icon_img"
                android:text="image processing"

                />

            <Button
                android:id="@+id/s6sub6"
                style="@style/buttonstyle"
                android:layout_row="2"
                android:layout_column="1"
                android:drawableTop="@drawable/icon_datastructure"
                android:text="data science"

                />


        </GridLayout>
        <Button
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="ethical hacking"
            android:id="@+id/s6sub7"
            android:drawableTop="@drawable/icon_hack"
            style="@style/buttonstyle"/>

    </LinearLayout>
</FrameLayout>