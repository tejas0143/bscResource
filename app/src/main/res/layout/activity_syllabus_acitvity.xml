<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SyllabusAcitvity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Syllabus"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textColor="#070707"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstYear"
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity=""
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:onClick="firstYear"

            android:drawableTop="@drawable/icon_1"
            android:text="first  year"

            />

        <Button
            android:id="@+id/secondYear"
            style="@style/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity=""
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:onClick="SecondtYear"
            android:drawableTop="@drawable/icon_2"
            android:text="second year"

            />




    </LinearLayout>
    <Button
        android:id="@+id/thirdYear"
        style="@style/buttonstyle"
        android:layout_width="148dp"
        android:layout_height="169dp"
        android:onClick="ThirdYear"
        android:drawableTop="@drawable/icon_3"
        android:gravity=""
        android:text="Third year"

        />



</LinearLayout>