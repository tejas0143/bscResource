<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Sem1Fragment">



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sem1 textbooks"
    android:textColor="@color/black"
    android:gravity="center_horizontal"
    android:textSize="20sp"
    android:textAllCaps="false"/>

    <GridLayout
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_weight="1"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:rowCount="3">

        <Button
            android:id="@+id/s1sub1"
            style="@style/buttonstyle"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:drawableTop="@drawable/icon_computer"
            android:text= "COD"/>

        <Button

            android:id="@+id/s1sub2"
            style="@style/buttonstyle"
            android:layout_row="0"
            android:layout_column="1"
            android:drawableTop="@drawable/icon_python"
            android:text="Python"

            />

        <Button
            android:id="@+id/s1sub3"
            style="@style/buttonstyle"
            android:layout_row="1"
            android:layout_column="0"
            android:drawableTop="@drawable/icons_foss"
            android:text="FOSS"

            />

        <Button
            android:id="@+id/s1sub4"
            style="@style/buttonstyle"
            android:layout_row="1"
            android:layout_column="1"
            android:drawableTop="@drawable/icon_database"
            android:text="Database system"
            android:textSize="11sp"

            />

        <Button
            android:id="@+id/s1sub5"
            style="@style/buttonstyle"
            android:layout_row="2"
            android:layout_column="0"
            android:drawableTop="@drawable/icon_dm"
            android:text="Discrete maths"

            />

        <Button
            android:id="@+id/s1sub6"
            style="@style/buttonstyle"
            android:layout_row="2"
            android:layout_column="1"
            android:drawableTop="@drawable/icon_stat32"
            android:text="statistics"

            />


    </GridLayout>
    <Button
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="soft
        skill"
        android:id="@+id/s1sub7"
        android:drawableTop="@drawable/icon_soft6"
        style="@style/buttonstyle"/>

</LinearLayout>
</FrameLayout>